{
  "breakpoints": {
    "sm": "700px",
    "md": "900px"
  },
  "colors": {
    "default": {
      "buttonBg": "rgba(0,0,0,0.75)",
      "buttonBgHover": "rgba(0,0,0,0.8)",
      "text": "#757575",
      "title": "#333333",
      "titleDark": "#000000"
    }
  },
  "components": {
    "Text": {
      "variants": {
        "title": {
          "color": "default.titleDark",
          "fontSize": { "base": "4xl", "sm": "5xl", "md": "6xl" },
          "fontWeight": "bold"
        },
        "subtitle": {
          "color": "default.title",
          "fontSize": { "base": "xl", "md": "2xl" }
        }
      }
    }
  },
  "styles": {
    "global": {
      "*": {
        "transition": "all 0.4s ease"
      },
      "html": {
        "background": "white",
        "color": "default.text",
        "fontFamily": "'Poppins', sans-serif",
        "scrollBehavior": "smooth"
      },
      "body": {
        "margin": "auto",
        "maxWidth": "container.lg"
      }
    }
  }
}
